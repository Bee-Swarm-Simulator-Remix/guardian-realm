generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DB_URL")
}

model Infraction {
    id          Int       @id @default(autoincrement())
    userId      String
    guildId     String
    reason      String?
    moderatorId String
    expiresAt   DateTime?
    metadata    Json?
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @default(now()) @updatedAt

    @@map("infractions")
}
