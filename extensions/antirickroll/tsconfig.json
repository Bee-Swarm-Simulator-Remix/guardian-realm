{
    "compilerOptions": {
        "paths": {
            "@sudobot/*": ["./node_modules/sudobot/build/*"]
        },
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "target": "ES2021",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./build",
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "exclude": ["node_modules", "build"]
}
